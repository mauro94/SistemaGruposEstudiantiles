<div class="row center">
  <h4>¡Bienvenido!</h4>
  <p>Inicia sesión con la cuenta de tu Grupo Estudiantil.</p>
</div>

<!--login-->
<div class="row">
  <div class="col s12 m6 offset-m3 z-depth-4 card-panel">
    <div class="container"><br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="input-field">
            <%= f.text_field :email %>
            <label for="user">Usuario</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field">
            <%= f.password_field :password, autocomplete: "off" %>
            <label for="password">Contraseña</label>
          </div>
        </div>
        <div class="row">
          <div class="actions">
            <%= f.submit "Iniciar Sesión", :class => 'btn waves-effect waves-light right' %>
          </div>
        </div>
      <% end %>
      <div class="row right">
        <%= render "grupos/shared/links" %>
      </div>
    </div>
  </div>
</div>  
