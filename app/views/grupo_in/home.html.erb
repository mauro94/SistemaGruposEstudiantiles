<div class="row">
  <h4>Hola <%=@grupo.email%>,</h4>
</div>
<!--Notificaciones-->
<div class="row">
  <h5>Avisos:</h5>
  <div class="collection">
    <a href="#" class="collection-item">Alvin</a>
  </div>
</div>

<div class="row center">
  <%= link_to "Crear Evento", "/eventos/new" , :class => 'waves-effect waves-light btn'%>
</div>
<!--Eventos de la semana-->
<div class="row">
  <div class="col s12">
    <table class="bordered highlight responsive-table">
      <thead>
        <tr>
          <th style = "text-align: center">Fecha</th>
          <th style = "text-align: center">Nombre</th>
          <th style = "text-align: center">Responsable</th>
          <th style = "text-align: center">Estatus</th>
          <th style = "text-align: center">Editar</th>
        </tr>
      </thead>

      <tbody>
        <%@eventos.each do |evento|%>
        <tr>
        <td style = "text-align: center"><%=evento.fechaInicio%></td>
          <td style = "text-align: center"><%=evento.nombre%></td>
          <td style = "text-align: center">Alvin</td>
          <td style = "text-align: center"><%=evento.estatus %></td>
          <td style = "text-align: center"><%= link_to 'Editar evento', edit_evento_path(evento) %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>