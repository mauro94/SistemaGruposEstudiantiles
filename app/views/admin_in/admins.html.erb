<div class="row">
	<h3 style = "text-align: center"> Administradores </h3>
</div>

<div class="row">
	<table class="bordered highlight responsive-table">
    <thead>
      <tr>
        <th style = "text-align: center;">Nombre</th>
        <th style = "text-align: center;">Correo</th>
        <th style = "text-align: center;">Puesto</th>
        <th style = "text-align: center;">Consejo</th>
        <th style = "text-align: center;">Extensión</th>
        <th style = "text-align: center;">Oficina</th>
        <th style = "text-align: center;">Editar</th>
        <th style = "text-align: center;">Eliminar</th>
      </tr>
    </thead>

    <tbody>
      <%@admins.each do |a|%>
          <tr>
            <td style = "text-align: center;"><%=a.nombre%> <%=a.apellido%></td>
            <td style = "text-align: center;"><%=a.email%></td>
            <td style = "text-align: center;"><%=a.puesto%></td>
            <td style = "text-align: center;"><%=a.consejo%></td>
            <td style = "text-align: center;"><%=a.extension%></td>
            <td style = "text-align: center;"><%=a.oficina%></td>
            <td style = "text-align: center;"><%= link_to edit_admin_admin_path(a), :class => "waves-effect waves-light btn" do %>
            <%= content_tag :i, 'edit',  :class => "material-icons center"%>
            <%end%></td>
            <td style = "text-align: center;"><%= link_to admin_admin_path(a), :class => "waves-effect waves-light btn red", data: {confirm: "¿Estás seguro de eliminar al administrador?"}, :method => :delete do %>
            <%= content_tag :i, 'delete',  :class => "material-icons center"%>
            <%end%></td>
          </tr>
      <%end%>
    </tbody>
  </table>
</div>

<div class="row center">
	<%= will_paginate @admins, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
</div>

<div class="row">
  <%= link_to "Regresar", "/admin/home", {:class=>"btn btn-default"} %>
  <a class="btn-floating btn-large waves-effect waves-light right" href="/admin/new_admin"><i class="material-icons">add</i></a>
</div>