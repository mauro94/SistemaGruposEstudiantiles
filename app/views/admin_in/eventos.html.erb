<div class="row">
	<h3> Eventos </h3>
</div>

<div class="row">
	<table class="bordered highlight responsive-table">
      <thead>
        <tr>
          <th>Folio</th>
          <th>Fecha</th>
          <th>Nombre</th>
          <th>Responsable</th>
          <th>Estatus</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </thead>

      <tbody>
        <%@eventos.each do |e|%>
        <tr>
          <td><%=e.folio%></td>
          <td><%=e.fechaInicio%></td>
          <td><%=e.nombre%></td>
          <td><%=(Grupo.find_by evento_id: e.id).nombre%></td>
          <td><%=e.estatus %></td>
          <td><%= link_to edit_evento_path(e.folio), :class => "waves-effect waves-light btn" do %>
            <%= content_tag :i, 'edit',  :class => "material-icons center"%>
            <%end%></td>
          <td><%= link_to evento_path(e.folio), :class => "waves-effect waves-light btn red", data: {confirm: "Â¿Estas seguro?"}, :method => :delete do %>
            <%= content_tag :i, 'delete',  :class => "material-icons center"%>
            <%end%></td>
        </tr>
        <%end%>
      </tbody>
    </table>
</div>

<%= link_to "Regresar", :back, {:class=>"btn btn-default"} %>