<div class="row">
	<div class="row">
		<h5>Documentos</h5>
		<%= form_for @evento do |f| %>
		<div class="row">
	    <div class="col s12">
	      <label>Carta Contenido:</label><br>
	      <%= f.file_field :archivoCartaContenido %>
	      <%if @evento.archivoCartaContenido_url != nil%>
	      	<%= link_to "Ver documento", @evento.archivoCartaContenido_url %>
	      <%end%>
	    </div>
	  </div>
	  <div class="row">
	    <div class="col s12">
	      <label>Carta Profesor Asesor:</label><br>
	      <%= f.file_field :archivoCartaAsesor %>
	      <%if @evento.archivoCartaAsesor_url != nil%>
	      	<%= link_to "Ver documento", @evento.archivoCartaAsesor_url %>
	      <%end%>
	    </div>
	  </div>
	  <div class="row">
    	<%= f.submit "Guardar Documentos", class: "btn btn-primary" %>
    </div>
  <% end %>
	</div>
</div>