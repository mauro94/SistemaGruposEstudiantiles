<h2>Número del Evento: <%=@evento.folio%></h2>
<div>
	<table class="bordered highlight responsive-table">
		<thead>
			<tr>
				<th><%=@evento.nombre%></th>
			</tr>
		</thead>

		<tbody>
			<tr>
				<td>Descripción: <%=@evento.descripcion%></td>
				<td>Fecha Inicio: <%=@evento.fechaInicio%></td>
				<td>Fecha Fin: <%=@evento.fechaFin%></td>
				<td>Estatus del Evento: <%=@evento.estatus%></td>
			</tr>
		</tbody>
	</table>
</div>

<br>
<%= link_to "Regresar a lista de eventos", root_path, {:class=>"btn btn-default"} %>